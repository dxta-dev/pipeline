{
  "name": "pipeline",
  "private": true,
  "engines": {
    "node": ">=v18.17.1"
  },
  "scripts": {
    "build": "turbo build",
    "db:generate": "turbo db:generate",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "dev": "turbo dev --parallel",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "manypkg": "manypkg check",
    "lint:fix": "biome check --write .",
    "manypkg:fix": "manypkg fix",
    "type-check": "turbo type-check",
    "test": "turbo test"
  },
  "dependencies": {
    "@biomejs/biome": "1.6.4",
    "@libsql/client": "0.3.6",
    "@manypkg/cli": "0.21.1",
    "@types/node": "20.4.4",
    "drizzle-orm": "0.29.1",
    "drizzle-zod": "0.5.1",
    "turbo": "1.12.3",
    "typescript": "5.3.3",
    "zod": "3.22.4"
  },
  "packageManager": "npm@9.8.1",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/config/*",
    "packages/integrations/*",
    "packages/schemas/*",
    "packages/functions/*"
  ]
}
