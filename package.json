{
  "name": "pipeline",
  "private": true,
  "engines": {
    "node": ">=v18.17.1"
  },
  "scripts": {
    "build": "pnpm -r --if-present run build",
    "db:generate": "pnpm -r --if-present run db:generate",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "pnpm -r --if-present run clean",
    "dev": "pnpm -r --if-present --parallel run dev",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "manypkg": "manypkg check",
    "lint:fix": "biome check --write .",
    "manypkg:fix": "manypkg fix",
    "type-check": "pnpm -r --if-present run type-check",
    "test": "pnpm -r --if-present run test"
  },
  "dependencies": {
    "@biomejs/biome": "2.3.11",
    "@libsql/client": "0.17.0",
    "@manypkg/cli": "0.25.1",
    "@types/node": "25.0.9",
    "drizzle-orm": "0.45.1",
    "drizzle-zod": "0.8.3",
    "typescript": "5.9.3",
    "zod": "4.3.5"
  },
  "packageManager": "pnpm@9.12.2",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/config/*",
    "packages/integrations/*",
    "packages/schemas/*",
    "packages/functions/*"
  ]
}
